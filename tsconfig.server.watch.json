{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "watch": true
  },
  "compileOnSave": true
}
